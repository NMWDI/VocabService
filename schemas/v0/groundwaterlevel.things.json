{
	"$id": "https://vocab.newmexicowaterdata.org/schemas/gwl_thing",
	"title": "NMWDI Groundwater Level Thing Schema",
	"description": "",
	"version": "0.0.2",
	"type": "object",
	"required": [
		"name",
		"description",
		"properties"
	],
	"properties": {
		"name": {
			"type": "string",
			"description": "name of a Thing for groundwater levels should be `Water Well`"
		},
		"description": {
			"type": "string",
			"description": "description of this location"
		},
		"properties": {
			"type": "object",
			"description": "a flexible place to associate additional attributes with a thing",
			"required": ["well_depth", "kind", "current_use", "status", "agency"],
			"properties": {
				"agency": {
					"type": "string"
				},
				"ose_well_tag": {
					"type": "string"
				},
				"pod_file": {
					"type": "string"
				},
				"pod_url": {
					"type": "string"
				},
				"completion_date": {
					"type": "string"
				},
				"construction_method": {
					"type": "string"
				},
				"current_use": {
					"type": "string",
					"enum": [
						"open_unequipped_well",
						"commercial",
						"domestic",
						"power_generation",
						"irrigation",
						"livestock",
						"mining",
						"industrial",
						"observation",
						"public_supply",
						"shared_domestic",
						"institutional",
						"unknown",
						"unused"
					],
					"description": ""
				},
				"status": {
					"type": "string",
					"enum": [
						"abandoned",
						"active_pumping well",
						"destroyed_exists_but_not_usable",
						"inactive_exists_but_not_used",
						"unknown"
					],
					"description": ""
				},
				"well_depth": {
					"type": "object",
					"properties": {
						"value": {
							"type": "number"
						},
						"units": {
							"type": "string",
							"enum": ["ftbgs", "mbgs"]
						}
					},
					"required": ["value", "units"]
				},
				"kind": {
					"type": "string"
				},
				"geologic_formation": {
					"type": "string",
					"description": ""
				},
				"casing": {
					"type": "object",
					"properties": {
						"diameter": {
							"type": "number"
						},
						"units": {
							"type": "string"
						}
					},
					"required": ["diameter", "units"]
				},
				"aquifer": {
					"type": "string"
				},
				"hole_depth": {
					"type": "object",
					"properties": {
						"value": {
							"type": "number"
						},
						"units": {
							"type": "string",
							"enum": ["ftbgs", "mbgs"]
						}
					},
					"required": ["value", "units"]
				},
				"screens": {
					"type": "array",
					"items": {
						"type": "object",
						"required": [
							"bottom",
							"top",
							"units"
						],
						"properties": {
							"bottom": {
								"type": "number"
							},
							"top": {
								"type": "number"
							},
							"units": {
								"type": "string",
								"enum": ["ftbgs", "mbgs"]
							},
							"description": {
								"type": "string"
							}
						}
					}
				}
			}
		}
	}
}
